<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/overviewFragment_dest">

    <fragment
        android:id="@+id/overviewFragment_dest"
        android:name="com.evans.swinspector.OverviewFragment"
        android:label="fragment_overview"
        tools:layout="@layout/fragment_overview" >
        <action
            android:id="@+id/action_overviewFragment_dest_to_settingsFragment_dest2"
            app:destination="@id/settingsFragment_dest" />
        <action
            android:id="@+id/action_overviewFragment_dest_to_historyFragment"
            app:destination="@id/historyFragment_dest" />
        <action
            android:id="@+id/action_overviewFragment_dest_to_monsterViewFragment"
            app:destination="@id/monsterViewFragment_dest" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment_dest"
        android:name="com.evans.swinspector.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/historyFragment_dest"
        android:name="com.evans.swinspector.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/monsterViewFragment_dest"
        android:name="com.evans.swinspector.MonsterViewFragment"
        android:label="fragment_monster_view"
        tools:layout="@layout/fragment_monster_view" />
</navigation>